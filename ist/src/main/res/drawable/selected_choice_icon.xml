<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="@dimen/_1sdp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/white" />
                    <solid android:color="@color/white"/>
                    <size
                        android:width="@dimen/_24sdp"
                        android:height="@dimen/_24sdp" />
                </shape>
            </item>

            <item
                android:width="@dimen/_6sdp"
                android:height="@dimen/_2sdp"
                android:top="@dimen/_14sdp"
                android:left="@dimen/_3sdp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/blue"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="@dimen/_16sdp"
                android:height="@dimen/_2sdp"
                android:top="@dimen/_11sdp"
                android:left="@dimen/_5sdp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/blue"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</layer-list>