<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_22sdp">

    <TextView
        android:id="@+id/numericCesQuestionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:gravity="center"
        android:text="@string/whatever_your_choice_was_we_could_do_better_we_want_to_know"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/numericCesQuestionTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numericCesQuestionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:gravity="start"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_18ssp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numericCesQuestionDescription"
        tools:text="Ahmed Medhat Mohamed" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/numericCesQuestionsNumbersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/numericCesQuestionTitle"
        app:layout_constraintTop_toBottomOf="@id/numericCesQuestionTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/numericCesQuestion5Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_difficult"
                android:textColor="@color/light_pink"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/numericCesQuestions5NumbersContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/veryEasyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_easy"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@id/numericCesQuestions5NumbersContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/numericCesQuestions5NumbersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/veryEasyLabel"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numericCesQuestion5_1"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/pink"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion5_2"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/mustard"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion5_3"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/yellow"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion5_4"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/lemon_green"
                    android:gravity="center"
                    android:text="@string/_4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion5_5"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/dark_green"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/numericCesQuestion10Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/numericCesQuestion10LeftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_difficult"
                android:textColor="@color/light_pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numericCesQuestion10RightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_easy"
                android:textColor="@color/dark_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/numericCesQuestions10NumbersContainerFirstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/numericCesQuestion10LeftText">

                <TextView
                    android:id="@+id/numericCesQuestion10_1"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/red1"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_2"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/red2"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_3"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/red3"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_4"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/orange1"
                    android:gravity="center"
                    android:text="@string/_4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_5"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/orange1"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_6"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/yellow1"
                    android:gravity="center"
                    android:text="@string/_6"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numericCesQuestions10NumbersContainerSecondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/numericCesQuestions10NumbersContainerFirstRow">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_7"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/mint_yellow"
                    android:gravity="center"
                    android:text="@string/_7"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_8"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/mint_green"
                    android:gravity="center"
                    android:text="@string/_8"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_9"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/light_green1"
                    android:gravity="center"
                    android:text="@string/_9"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numericCesQuestion10_10"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/dark_green1"
                    android:gravity="center"
                    android:text="@string/_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/numericCesQuestionErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/please_answer_this_question"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/numericCesQuestionsNumbersContainer"
        app:layout_constraintTop_toBottomOf="@id/numericCesQuestionsNumbersContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>